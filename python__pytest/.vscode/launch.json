    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env", // Optional: if you use environment variables
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/venv", // Example: if your source code is in a 'src' folder
                "MY_ENV_VAR": "my_value"
            }
        }
    ]
}
